language: java
sudo : false
dist : trusty
jdk:
- openjdk7
addons:
  apt:
    packages:
    - oracle-java7-installer
before_install:
- rm ~/.m2/settings.xml

install: skip

jobs:
  include:
    - stage: tests
      name: unit
      script:
        - mvn clean install -DskipTests=false -q --update-snapshots

branches:
  only:
  - master
  - "/^2\\.[0-9]{1,}/"
